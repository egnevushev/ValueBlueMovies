{
  "AuditDbConfiguration": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "AuditStore",
    "AuditCollectionName": "Audit"
  },
  
  "OmdbConfiguration": {
    "ApiKey" : "PUT_API_KEY_HERE",
    "BaseAddress" : "https://www.omdbapi.com/",
    "TimeOut" : "00:00:30",
    "WaitBetweenRetry" : "00:00:02",
    "RetryCount" : 3
  },
  
  "CacheConfiguration": {
    "CacheSize" : "1024",
    "Expiration" : "00:10:00"
  },
  
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*"
}
